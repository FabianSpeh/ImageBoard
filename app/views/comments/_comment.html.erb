<div class="comment-container">
<small><strong> <%=comment.user.getName + " says:"  %> </strong></small>
 <p id="comment-body"><%= comment.body%>
 <% if current_user.id == comment.user_id || current_user.id == Post.find(comment.post_id).user_id%>
 <%= link_to 'Destroy', post_comment_path(id: comment.id, post_id: comment.post_id), method: :delete, data: { confirm: 'Are you sure?' } %></p>
 <%end%>
 <hr>
 </div>
